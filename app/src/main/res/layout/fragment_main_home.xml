<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    xmlns:tools="http://schemas.android.com/tools"

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/background2"
                    android:elevation="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/frg_home_pbCalories"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginTop="30dp"
                        android:progressDrawable="@drawable/progressbar"
                        android:progressTint="@color/progress1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/frg_home_tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:text="Remaining"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        android:textColor="@color/colorText"
                        app:layout_constraintEnd_toEndOf="@+id/frg_home_pbCalories"
                        app:layout_constraintStart_toStartOf="@+id/frg_home_pbCalories"
                        app:layout_constraintTop_toTopOf="@+id/frg_home_pbCalories" />

                    <TextView
                        android:id="@+id/frg_home_tvCurrent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        android:textSize="20sp"

                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/frg_home_pbCalories"
                        app:layout_constraintStart_toStartOf="@+id/frg_home_pbCalories"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_tvStatus" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="90dp"
                        android:text="Intake"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:layout_marginEnd="40dp"
                        android:text="Cardio"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/frg_home_tvDailyIntake"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        app:layout_constraintEnd_toStartOf="@+id/frg_home_pbCalories"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />

                    <TextView
                        android:id="@+id/frg_home_tvCardio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/frg_home_pbCalories"
                        app:layout_constraintTop_toBottomOf="@+id/textView22" />

                    <ProgressBar
                        android:id="@+id/frg_home_pbProtein"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:progressTint="@color/progress1"
                        app:layout_constraintEnd_toStartOf="@+id/frg_home_pbFat"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_pbCalories" />

                    <ProgressBar
                        android:id="@+id/frg_home_pbFat"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:progressTint="@color/progress2"
                        app:layout_constraintEnd_toStartOf="@+id/frg_home_pbCarb"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/frg_home_pbProtein"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_pbCalories" />

                    <ProgressBar
                        android:id="@+id/frg_home_pbCarb"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:progressTint="@color/progress3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/frg_home_pbFat"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_pbCalories" />

                    <TextView
                        android:id="@+id/frg_home_tvProtein"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/frg_home_tvFat"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_pbProtein" />

                    <TextView
                        android:id="@+id/frg_home_tvFat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/frg_home_tvCarb"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/frg_home_tvProtein"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_pbFat" />

                    <TextView
                        android:id="@+id/frg_home_tvCarb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.App.Subtitle1"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/frg_home_tvFat"
                        app:layout_constraintTop_toBottomOf="@+id/frg_home_pbCarb" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/frg_home_rvMeal"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"

                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frg_home_btnDayBefore" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/frg_main_fabAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="27dp"
                    android:clickable="true"
                    app:backgroundTint="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="@+id/frg_home_rvMeal"
                    app:layout_constraintEnd_toEndOf="@+id/frg_home_rvMeal"
                    app:srcCompat="@android:drawable/ic_input_add" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/frg_home_fabMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#6A1B9A"
                    android:clickable="true"
                    android:visibility="invisible"
                    app:backgroundTint="#6A1B9A"
                    app:layout_constraintBottom_toTopOf="@+id/frg_main_fabAdd"
                    app:layout_constraintEnd_toEndOf="@+id/frg_main_fabAdd"
                    app:srcCompat="@drawable/icon_meal" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/frg_home_fabCardio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#558B2F"
                    android:clickable="true"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/frg_home_fabMeal"
                    app:layout_constraintEnd_toEndOf="@+id/frg_home_fabMeal"
                    app:srcCompat="@android:drawable/ic_lock_idle_low_battery" />

                <ImageButton
                    android:id="@+id/frg_home_btnDayBefore"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/btn_invisible"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorAccent"
                    app:layout_constraintEnd_toStartOf="@+id/frg_home_tvCurrentDay"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    app:srcCompat="@drawable/icon_left" />

                <ImageButton
                    android:id="@+id/frg_home_btnDayAfter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/btn_invisible"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/frg_home_tvCurrentDay"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                    app:srcCompat="@drawable/icon_right" />

                <TextView
                    android:id="@+id/frg_home_tvCurrentDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.App.Subtitle1"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/frg_home_btnDayAfter"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/frg_home_btnDayBefore"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
